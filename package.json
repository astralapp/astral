{
  "name": "Astral",
  "private": true,
  "scripts": {
    "test": "ava",
    "lint": "eslint resources/assets/js --ext='.js,.vue'",
    "clean": "rm -f public/css/app.css public/css/app.*.css public/js/app.js public/js/app.*.js public/mix-manifest.json",
    "clean-deps": "rm -rf node_modules",
    "reinstall-deps": "npm run clean-deps && npm install",
    "dev": "cross-env NODE_ENV=development webpack --progress --hide-modules",
    "watch": "cross-env NODE_ENV=development webpack --watch --progress --hide-modules",
    "hot": "cross-env NODE_ENV=development webpack-dev-server --inline --hot",
    "production": "npm run clean && cross-env NODE_ENV=production webpack --progress --hide-modules"
  },
  "ava": {
    "verbose": true,
    "files": [
      "resources/assets/js/tests/**/*.spec.js"
    ],
    "require": [
      "babel-register",
      "./resources/assets/js/tests/helpers/setup-browser-env.js"
    ]
  },
  "dependencies": {
    "dragula": "^3.6.3",
    "es6-promise": "^4.0.5",
    "highlight.js": "^9.5.0",
    "jquery": "^2.2.0",
    "js-base64": "^2.1.9",
    "local-storage": "^1.4.2",
    "lodash": "^4.0.0",
    "marked": "^0.3.5",
    "select2": "^4.0.1",
    "simplemde": "^1.11.2",
    "vue": "^2.1.10",
    "vue-clickaway": "^2.1.0",
    "vue-resource": "^0.6.1",
    "vue-router": "^2.1.3",
    "vuex": "^2.1.1"
  },
  "devDependencies": {
    "ava": "^0.18.2",
    "ava-spec": "^1.1.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-plugin-transform-object-rest-spread": "^6.23.0",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-runtime": "^6.23.0",
    "browser-env": "^2.0.25",
    "eslint": "^3.18.0",
    "eslint-config-vue": "^2.0.2",
    "eslint-plugin-html": "^2.0.1",
    "eslint-plugin-vue": "^2.0.1",
    "laravel-mix": "^0.9.2",
    "node-bourbon": "^4.2.8",
    "node-sass": "^4.5.1"
  }
}
